<!-- The contents of this file will be loaded for each web application -->
<Context>

    <Resources cachingAllowed="true" cacheMaxSize="102400" />    

    <!-- Default set of monitored resources. If one of these changes, the    -->
    <!-- web application will be reloaded.                                   -->
    <WatchedResource>WEB-INF/web.xml</WatchedResource>
    <WatchedResource>${catalina.base}/conf/web.xml</WatchedResource>

    <Resource name="jdbc/6connexDB"
              auth="Container"
              type="javax.sql.DataSource"
              factory="com.sixconnex.encrypt.EncryptedProxoolDataSource"
              proxool.alias="6connexDB"
              user="{{USER_DB}}"
              password="{{PASSWORD_DB}}"
              delegateProperties="foo=1,bar=true"
              proxool.driver-url="jdbc:mysql://{{DB_ENDPOINT}}:3306/6connex_db?useUnicode=true&amp;characterEncoding=UTF-8"
              proxool.driver-class="com.mysql.jdbc.Driver"
              proxool.house-keeping-sleep-time="900000"
              proxool.maximum-active-time="14400000"
              proxool.house-keeping-test-sql="select 1 from dual"
              proxool.minimum-connection-count="25"
              proxool.maximum-connection-count="1500"
              proxool.simultaneous-build-throttle="500"
              proxool.test-before-use="true"/>

    <Resource name="jdbc/6connexDW"
              auth="Container"
              type="javax.sql.DataSource"
              factory="com.sixconnex.encrypt.EncryptedProxoolDataSource"
              proxool.alias="6connexDW"
              user="{{USER_DB}}"
              password="{{PASSWORD_DB}}"
              delegateProperties="foo=1,bar=true"
              proxool.driver-url="jdbc:mysql://{{DB_ENDPOINT}}:3306/6connex_db?useUnicode=true&amp;characterEncoding=UTF-8"
              proxool.driver-class="com.mysql.jdbc.Driver"
              proxool.house-keeping-sleep-time="900000"
              proxool.maximum-active-time="3600000"
              proxool.minimum-connection-count="25"
              proxool.maximum-connection-count="1500"
              proxool.simultaneous-build-throttle="500"
              proxool.house-keeping-test-sql="select 1 from dual"
              proxool.test-before-use="true"/>

    <Resource name="jdbc/6connexDW2"
              auth="Container"
              type="javax.sql.DataSource"
              factory="com.sixconnex.encrypt.EncryptedProxoolDataSource"
              proxool.alias="6connexDW2"
              user="{{USER_DW}}"
              password="{{PASSWORD_DW}}"
              delegateProperties="foo=1,bar=true"
              proxool.driver-url="jdbc:mysql://{{DW_ENDPOINT}}:3306/6connex_dw2?useUnicode=true&amp;characterEncoding=UTF-8"
              proxool.driver-class="com.mysql.jdbc.Driver"
              proxool.house-keeping-sleep-time="900000"
              proxool.maximum-active-time="1800000"
              proxool.minimum-connection-count="25"
              proxool.maximum-connection-count="1500"
              proxool.simultaneous-build-throttle="500"
              proxool.house-keeping-test-sql="select 1 from dual"
              proxool.test-before-use="true"/>

    <Resource name="mail/Session"
              auth="Container"
              type="javax.mail.Session"
              mail.transport.protocol="smtp"
              mail.smtp.host="127.0.0.1"
              mail.smtp.auth="false"/>           

    <Environment name="redis/host" type="java.lang.String" value="{{REDIS_ENDPOINT}}" override="false"/>
    <Environment name="redis/port" type="java.lang.Integer" value="{{REDIS_PORT}}" override="false"/>
    <Environment name="mq/rabbit/host" type="java.lang.String" value="{{RABBITMQ_HOST}}" override="false"/>
    <Environment name="mq/rabbit/port" type="java.lang.Integer" value="{{RABBITMQ_PORT}}" override="false"/>
    <Environment name="mq/rabbit/username" type="java.lang.String" value="{{RABBITMQ_USER}}" override="false"/>
    <Environment name="mq/rabbit/password" type="java.lang.String" value="{{RABBITMQ_PASSWORD}}" override="false"/>
    <Environment name="sessionSize" value="10" type="java.lang.Integer" override="false"/>
    <Environment name="memcached/nodes" value="{{NODES_LIST1}}" type="java.lang.String" override="false"/>

    <Manager className="de.javakaffee.web.msm.MemcachedBackupSessionManager"
             memcachedNodes="{{NODES_LIST2}}"
             failoverNodes="n2"
             requestUriIgnorePattern=".*\.(ico|png|gif|jpg|css|js|html|xml)$"
             transcoderFactoryClass="de.javakaffee.web.msm.serializer.kryo.KryoTranscoderFactory"/>

    <Valve className="org.apache.catalina.authenticator.BasicAuthenticator" changeSessionIdOnAuthentication="true"/>

</Context>